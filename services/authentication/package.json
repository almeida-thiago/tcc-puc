{
  "name": "authentication-service",
  "productName": "Authentication",
  "version": "1.0.0",
  "description": "Authorize and manage access with JWT.",
  "author": "Thiago Almeida <alm.thiago@outlook.com>",
  "license": "UNLICENSED",
  "private": true,
  "main": "src/server.ts",
  "scripts": {
    "start": "env-cmd -f .env.production node out/server.js",
    "dev": "env-cmd -f .env.development nodemon --watch src -e ts --exec 'ts-node' -r tsconfig-paths/register src/server.ts",
    "stage": "npm run test && env-cmd -f .env.stage nodemon --watch src -e ts --exec 'ts-node' -r tsconfig-paths/register src/server.ts",
    "test": "env-cmd -f .env.stage jest",
    "build": "npm run test && tsc && tscpaths -p tsconfig.json -s ./src -o ./out && cp ./package.json ./out/package.json && cp ./doc_openapi.json ./out/doc_openapi.json",
    "clean": "rm -rf ./out && rm -rf ./node_modules",
    "init": "gitex-flow init",
    "feature:start": "gitex-flow feature start",
    "feature:finish": "gitex-flow feature finish",
    "release:start": "gitex-flow release start",
    "release:finish": "gitex-flow release finish",
    "hotfix:start": "gitex-flow hotfix start",
    "hotfix:finish": "gitex-flow hotfix finish",
    "bugfix:start": "gitex-flow bugfix start",
    "bugfix:finish": "gitex-flow bugfix finish",
    "support:start": "gitex-flow support start",
    "support:finish": "gitex-flow support finish",
    "commit": "git add . && cz"
  },
  "dependencies": {
    "axios": "^0.21.1",
    "bcrypt": "^5.0.1",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "express-rate-limit": "^5.3.0",
    "jsonwebtoken": "^8.5.1",
    "mysql": "^2.18.1",
    "node-os-utils": "^1.3.5",
    "uuid": "^8.3.2",
    "winston": "^3.2.1"
  },
  "devDependencies": {
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/jest": "^27.0.1",
    "@types/mysql": "^2.15.19",
    "@types/supertest": "^2.0.11",
    "commitizen": "^4.2.4",
    "env-cmd": "^10.0.1",
    "gitex-flow": "^2.3.3",
    "jest": "^27.0.6",
    "nodemon": "^2.0.12",
    "supertest": "^6.1.5",
    "swagger-ui-express": "^4.1.6",
    "ts-jest": "^27.0.4",
    "ts-node": "^10.2.0",
    "tsconfig-paths": "^3.10.1",
    "tscpaths": "^0.0.9",
    "tslint": "^6.1.2",
    "typescript": "^4.3.5"
  }
}
